<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary_Colour"
    tools:context=".Budget">

    <!-- 🧭 Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <!-- Title -->
    <TextView
        android:id="@+id/titleBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget"
        android:textSize="33sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Monthly Budget Label -->
    <TextView
        android:id="@+id/labelBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly Budget"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/titleBudget"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginStart="32dp" />

    <!-- Budget Input -->
    <EditText
        android:id="@+id/editBudget"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Rs 2,000"
        android:textSize="18sp"
        android:background="@drawable/input"
        android:padding="12dp"
        android:inputType="number"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/labelBudget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp" />

    <!-- Set Budget Button -->
    <Button
        android:id="@+id/btnSetBudget"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Set Budget"
        android:textStyle="bold"
        android:backgroundTint="@color/primaryButtonBackground"
        android:textColor="@color/primaryButtonText"
        app:layout_constraintTop_toBottomOf="@id/editBudget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:max="100"
        android:progress="75"
        android:progressTint="@color/yellow"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnSetBudget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Percentage Label -->
    <TextView
        android:id="@+id/percentUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75% used"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp" />

    <!-- Total Budget Row -->
    <TextView
        android:id="@+id/labelBudgetTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Budget"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/percentUsed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/amountBudgetTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="Rs 2,000"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/labelBudgetTotal" />

    <!-- Total Spent -->
    <TextView
        android:id="@+id/labelSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Spent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/labelBudgetTotal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/amountSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 1,500"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/labelSpent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- Remaining -->
    <TextView
        android:id="@+id/labelRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/labelSpent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp" />

    <TextView
        android:id="@+id/amountRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs 500"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/labelRemaining"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp" />

    <!-- Warning Message -->
    <TextView
        android:id="@+id/warningMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="@color/warning_yellow_bg"
        android:padding="16dp"
        android:text="⚠️ You are nearing your budget limit!"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelRemaining" />

            <!--  Pie Chart -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@id/warningMessage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/pieLegend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/pieChart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="⬤" android:textColor="#4CAF50" android:textSize="18sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Others   " android:textColor="@color/pie_legend_color" android:textSize="14sp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="⬤" android:textColor="#FFC107" android:textSize="18sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Food   " android:textColor="@color/pie_legend_color" android:textSize="14sp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="⬤" android:textColor="#F44336" android:textSize="18sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Bills   " android:textColor="@color/pie_legend_color" android:textSize="14sp"/>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="⬤" android:textColor="#8E24AA" android:textSize="18sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Health   " android:textColor="@color/pie_legend_color" android:textSize="14sp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="⬤" android:textColor="#2196F3" android:textSize="18sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Entertainment   " android:textColor="@color/pie_legend_color" android:textSize="14sp"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="⬤" android:textColor="#9E9E9E" android:textSize="18sp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Transport" android:textColor="@color/pie_legend_color" android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!--  Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">

        <Button
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/home"
            android:text="" />

        <Button
            android:id="@+id/btn_expenses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/expenses"
            android:text="" />

        <Button
            android:id="@+id/btn_budget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/budget"
            android:text="" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/profile"
            android:text="" />
    </LinearLayout>

</RelativeLayout>